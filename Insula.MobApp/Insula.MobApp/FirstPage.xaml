<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Insula.MobApp.FirstPage"
             Title="First Page">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="Entry_AuthorizationLogin"  Placeholder="Login" Text="Login"></Entry>
            <Entry x:Name="Entry_AuthorizationPassword"  Placeholder="Password" Text="Password"></Entry>
            <Button Text="Authorization" Clicked="Button_Click_Authorization"></Button>
            <Label x:Name="Label_Authorization" Text="Hello, Insula!"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>