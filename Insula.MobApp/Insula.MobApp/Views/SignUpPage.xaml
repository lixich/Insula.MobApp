<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Insula.MobApp.Views.SignUpPage">
    <ContentPage.Content>
        <StackLayout x:Name="MasterLayout">
            <StackLayout x:Name="LoginEntryStack" VerticalOptions="StartAndExpand">
                <StackLayout.Padding>
                    <OnIdiom x:TypeArguments="Thickness">
                        <OnIdiom.Phone>40,10,40,0</OnIdiom.Phone>
                        <OnIdiom.Tablet>140,150,140,0</OnIdiom.Tablet>
                    </OnIdiom>
                </StackLayout.Padding>
                <Label x:Name="Label_Username" Text="Username" />
                <Entry x:Name="Entry_Username" Placeholder="Username" />
                <Label x:Name="Label_Password" Text="Password" />
                <Entry x:Name="Entry_Password" IsPassword="true" Placeholder="Password"  />
                <Button Text="Sign Up" Clicked="Button_Clicked_SignUp" />
                <Label x:Name="Label_Message" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>